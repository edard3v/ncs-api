    "@ts-rex/bcrypt": "jsr:@ts-rex/bcrypt@1.0.3",
    "jsonwebtoken": "npm:jsonwebtoken@9.0.2",

    "@neondatabase/serverless": "npm:@neondatabase/serverless@0.10.4",
    "pg": "npm:pg@8.13.3",
    "drizzle-orm": "npm:drizzle-orm@0.38.3",
