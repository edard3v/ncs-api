    "@middlewares/": "./src/middlewares/",
    "@modules/": "./src/modules/",
    "@regex/": "./src/regex/",
    "@services/": "./src/services/",
    "@utils/": "./src/utils/",

    "@std/assert": "jsr:@std/assert@1",
    "cloudinary": "npm:cloudinary@2.6.0",

    "hono": "npm:hono@4.7.6",
